apiVersion: apps/v1
kind: Deployment
metadata:
	name: Frontend
	labels:
		app: Frontend
spec:
	replicas: 3
	selector:
		matchLabels:
			app: Frontend
	template:
		metadata:
			labels:
				app: Frontend
		spec:
			containers:
			- name: Frontend
				image: jenkins-kuber:5000/frontend:build-0
				ports:
				- containerPort: 5000
				readinessProbe:
					httpGet:
						path: /
						port: 5000
---
